package com.hakim;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.Timer;

public class ChronoWalkCycle {
	public Timer timer;
	public int compteurMarche = 0;
	
	public ChronoWalkCycle() {
		
		
		timer = new Timer(1000, new ActionListener() {
		    @Override
		    public void actionPerformed(ActionEvent ae) {
		        // change polygon data
		        // ...
		    	setCompteurMarche(compteurMarche++);
		    	compteurMarche++;
		    	//System.out.println(compteurMarche);
		        //Main.scene.repaint();
		        if(compteurMarche >=4) {
		        	compteurMarche = 0;
				}
		        
		    }
		});
	}

	public Timer getTimer() {
		return timer;
	}

	public void setTimer(Timer timer) {
		this.timer = timer;
	}

	public int getCompteurMarche() {
		return compteurMarche;
	}

	public void setCompteurMarche(int compteurMarche) {
		this.compteurMarche = compteurMarche;
	}
	
	
}
