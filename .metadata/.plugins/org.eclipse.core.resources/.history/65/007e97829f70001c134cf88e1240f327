package com.hakim;

import com.hakim.gameplay.Upgrade;

public class ChronoSelectedCharatere implements Runnable {

	private final int PAUSE = 150;
	

	@Override
	public void run() {
		Upgrade upgrade = new Upgrade(Main.scene.hero);
		while(upgrade.isExit() == false) {
			System.out.println("exite on upgrade : "+upgrade.isExit());
			//SelecteHeroScreen s = new SelecteHeroScreen();
			Main.frame.repaint();
			System.out.println(PAUSE);

			try {
				Thread.sleep(PAUSE);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}



	
	
	
}
