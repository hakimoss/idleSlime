		String yourChoice = e.getActionCommand();
		
	
		switch(yourChoice) {
		case "item1":
			Inventory.slotNbSelected = 0;
			Main.scene.showDetailItem = true;
			Main.inventory.btnInventory1.setIcon(null);
			System.out.println("name : "+Main.scene.hero.itemInInventory[0].name);
