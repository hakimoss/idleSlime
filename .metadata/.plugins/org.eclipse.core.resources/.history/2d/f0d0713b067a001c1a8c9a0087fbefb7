			case "P":
				Main.inventory.itemDescription.setText("<html><p><span style='color:white;'>Potion</span> <br>10 hp</p></html>");				
				break;
			case "RDW":
				Main.inventory.itemDescription.setText("<html><p><span style='color:white;'>Red Rune</span> <br> Damage : "+Main.scene.hero.itemInInventory[0].dmg+"</p></html>");		
				break;	
			case "RDG":
				Main.inventory.itemDescription.setText("<html><p><span style='color:green;'>Red Rune</span> <br> Damage : "+Main.scene.hero.itemInInventory[0].dmg+"</p></html>");		
				break;
			}
			break;
