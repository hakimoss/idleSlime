package com.hakim.inventory;

import java.util.Random;

public class Equipement {
	String name;
	String rarity;
	String type;
	
	
	Equipement(String name, String rarity, String type) {
		this.name = name;
		this.rarity = rarity;
		this.type = type;
		
		if(rarity == "white") {
			equipementWhite();
