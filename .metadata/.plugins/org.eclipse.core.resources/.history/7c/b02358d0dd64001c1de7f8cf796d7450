package com.hakim;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.Timer;

public class ChronoWalkCycle {
	public Timer timer;
	public int compteurMarche = 0;
	
	public ChronoWalkCycle() {
		System.out.println(this.compteurMarche);
		
		timer = new Timer(1000, new ActionListener() {
		    @Override
		    public void actionPerformed(ActionEvent ae) {
		        // change polygon data
		        // ...
		    	compteurMarche++;
		    	//System.out.println(compteurMarche);
		        //Main.scene.repaint();
		        if(compteurMarche >=4) {
		        	compteurMarche = 0;
				}
		        
		    }
		});
	}


	
	
}
