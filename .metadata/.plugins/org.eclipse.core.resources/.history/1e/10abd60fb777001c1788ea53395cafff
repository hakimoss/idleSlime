			Inventory.btnInventory4.setText(Inventory.itemInInventory[3]);
			Inventory.btnInventory5.setText(Inventory.itemInInventory[4]);
			Inventory.btnInventory6.setText(Inventory.itemInInventory[5]);
			Inventory.btnInventory7.setText(Inventory.itemInInventory[6]);
			Inventory.btnInventory8.setText(Inventory.itemInInventory[7]);
			Inventory.btnInventory9.setText(Inventory.itemInInventory[8]);
			Inventory.btnInventory10.setText(Inventory.itemInInventory[9]);
			
			switch(yourChoice) {
			
				
			}
		}
		
		
		
	}

}
