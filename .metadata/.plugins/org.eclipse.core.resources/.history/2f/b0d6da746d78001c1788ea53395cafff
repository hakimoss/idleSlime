package com.hakim.inventory;

public class Equipement {
	String name;
	String rarity;
	String type;
	
	
	Equipement(String name, String rarity, String type) {
		this.name = name;
		this.rarity = rarity;
		this.type = type;
		
		if(rarity == "white") {
			equipementWhite();
		} else if(rarity == "green") {
			equipementGreen();
		} else if(rarity == "blue") {
			equipementBlue();
		} else if(rarity == "purple") {
			equipementPurple();
		} else if(rarity == "orange") {
			equipementOrange();
		}
	}
	
	
	public void equipementWhite() {
		// 1 stats (1-3 value)
		if(this.type == "Dmg") {
			
		}
	}
	
	public void equipementGreen() {
		// 2 stats (3-6 value)
	}
	
	public void equipementBlue() {
		// 3 stats (6-10 value)
	}
	
	public void equipementPurple() {
		// 4 stats (10-20 value)
	}
	
	public void equipementOrange() {
		// 5 stats (20-50 value)
	}
}
